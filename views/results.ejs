
    <%- include('partials/header.ejs') %>
    <section class="container-div">
    <a href="/search" class="back">Back</a>
    <div class="search">
        <form action="/search" method="POST">
            <input type="text" name="query" placeholder="Search for a recipe..." required>
            <button type="submit">Search</button>
        </form>
    </div>  
    
</section>
    <div class="card-container">  
        <% if (recipes.length > 0) { %>
        <% recipes.forEach(recipe => { %>
            <div class="card">
                <img class="image" src="<%= recipe.image %>" alt="<%= recipe.title %>">
                <h3 class="title"><%= recipe.title %></h3>
                <a class=button href="/recipe/<%= recipe.id %>">View Recipe</a>
            </div>
        <% }); %>
        <% } else { %>
            <p class="no-results">No recipes found. Try searching for something else!</p>
        <% } %>    
    </div>

